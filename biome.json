{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "indentStyle": "space",
      "lineWidth": 80
    },
    "javascript": {
      "formatter": {
        "arrowParentheses": "asNeeded",
        "jsxQuoteStyle": "double",
        "quoteStyle": "single",
        "semicolons": "asNeeded"
      }
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "a11y": {
          "noSvgWithoutTitle": "off",
          "useKeyWithClickEvents": "off",
          "useButtonType": "off",
          "useAltText": "off"
        },
        "correctness": {
          "useExhaustiveDependencies": "off",
           "noUnusedImports": "error"
        },
        "style": {
          "useSelfClosingElements": "off",
          "noUnusedTemplateLiteral": "off"
        },
        "suspicious": {
          "noArrayIndexKey": "off"
        }
      }
    },
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
    },
    "files": {
      "ignoreUnknown": true
    }
  }